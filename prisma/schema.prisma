// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma" // Ensure this path is correct for your project
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                      @id @default(autoincrement()) @map("user_id")
  account_id       String                   @unique @map("id")
  username         String
  email            String
  passwordHash     String                   @map("password_hash")
  verificationCode String?                  @map("verification_code") @db.Char(10)
  avatar           String?                  
  emailVerified    Boolean                  @default(false) @map("email_verified")
  createdAt        DateTime                 @default(now()) @map("created_at")
  googleId         String?                  @unique @map("google_id")
  discordId        String?                  @unique @map("discord_id")
  sessions         OAuthSession[]
  authCodes        OAuthAuthorizationCode[]
  accessTokens     OAuthAccessToken[]

  @@map("users")
}

model OAuthClient {
  id           String                   @id @map("client_id")
  name         String
  clientSecret String                   @map("client_secret")
  redirectUris Json                     @map("redirect_uris")
  scopes       String?
  isActive     Boolean                  @default(true) @map("is_active")
  createdAt    DateTime                 @default(now()) @map("created_at")
  updatedAt    DateTime                 @updatedAt @map("updated_at")
  authCodes    OAuthAuthorizationCode[]
  accessTokens OAuthAccessToken[]

  @@map("oauth_clients")
}

model OAuthAuthorizationCode {
  code        String      @id
  userId      Int         @map("user_id")
  clientId    String      @map("client_id")
  redirectUri String      @map("redirect_uri")
  scope       String?
  expiresAt   DateTime    @map("expires_at")
  used        Boolean     @default(false)
  createdAt   DateTime    @default(now()) @map("created_at")
  user        User        @relation(fields: [userId], references: [id])
  client      OAuthClient @relation(fields: [clientId], references: [id])

  @@index([userId])
  @@index([clientId])
  @@map("oauth_authorization_codes")
}

model OAuthSession {
  token     String   @id @map("session_token")
  userId    Int      @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("oauth_sessions")
}

model OAuthAccessToken {
  token                 String      @id @map("access_token")
  userId                Int         @map("user_id")
  clientId              String      @map("client_id")
  scope                 String?
  expiresAt             DateTime    @map("expires_at")
  refreshToken          String?     @unique @map("refresh_token")
  refreshTokenExpiresAt DateTime?   @map("refresh_token_expires_at")
  createdAt             DateTime    @default(now()) @map("created_at")
  user                  User        @relation(fields: [userId], references: [id])
  client                OAuthClient @relation(fields: [clientId], references: [id])

  @@index([userId])
  @@index([clientId])
  @@map("oauth_access_tokens")
}
